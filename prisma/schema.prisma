// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id          Int     @id @default(autoincrement())
  description String
  warning     String?
  additional  String?
}

model Monsters {
  name        String  @id
  hability    Int
  life        Int
  description String?
  loot        String?
  additional  String?
  islands     Islands @relation(fields: [islandsId], references: [name])
  islandsId   String  
}

model Islands {
  name        String     @id
  description String
  warning     String?
  additional  String?
  Monsters    Monsters[]
}
